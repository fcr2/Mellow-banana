<div>
	<p>This reply has <%= pluralize(@comments.count, "Comment") %></p>
	
	<% @comments.each do |comment| %>
	<p><b><%= comment.user.email %></b></p>
	<p><%= comment.content %></p>
	<p><%= time_ago_in_words(comment.created_at) %></p>

		
			<%= link_to 'Delete comment',[comment.pelicula, comment], method: :delete, class:"btn btn-md btn-warning" %>
   			<%= link_to 'Edit comment', edit_pelicula_comment_path(comment.pelicula, comment), class:"btn btn-md btn-warning" %>
    	
	<% end %>


	<%= render 'comments/form' %>	
	
</div>	
	
