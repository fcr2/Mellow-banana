	<div class="col-xs-12" >
		<br />
		<div class="panel panel-default">
  			<div class="panel-heading">
    			<center><h1>Lista <b>Mellow Banana</b> de peliculas interesantes index#page </h1></center>
  			</div>
		</div>
		

		<% @pelicula.each do |peli| %>

		<p>Nombre:<%=link_to peli.name, peli %></p>
		<p>Estrellas:<%= peli.stars %></p>
		<p>Actor principal:<%= peli.main_actor %></p>
		<p>Año de la pelicula:<%= peli.year %></p>
		<br />
		<%= link_to "Editar Pelicula", edit_pelicula_path(peli), class:"btn btn-md btn-info" %>
		<%= link_to "Eliminar Pelicula", pelicula_path(peli), method: :delete, class:"btn btn-md btn-warning" %>
		<hr />
		<%end%>		
		<br />
		<p> <%= link_to "Añadir nueva peli", new_pelicula_path, class:"btn btn-md btn-success" %> </p>
		<br />
		<hr />
	</div>		


